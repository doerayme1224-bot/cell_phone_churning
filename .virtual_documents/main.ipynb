# Baseline Model
df['churn'].value_counts(normalize= True)
# if our model score is worse than the normalized on `0.855 or around 85 percent` the model may not be worth using


X = df[['custserv_calls','day_mins','day_charge', 'eve_mins']]

y = df['churn']


X


X_train, X_test, y_train, y_test = train_test_split(X, y, random_state = 42, stratify = y)





sc = StandardScaler()


X_train_sc = sc.fit_transform(X_train)


X_test_sc = sc.transform(X_test)





scores = []

for k in range(3, 32, 2):
    knn = KNeighborsClassifier(n_neighbors = k)
    knn.fit(X_train_sc, y_train)
    train_score = knn.score(X_train_sc, y_train)
    test_score = knn.score(X_test_sc, y_test)

    scores.append({'k': k, 'train_score': train_score, 'test_score': test_score})

df_scores = pd.DataFrame(scores)


df_scores


knn = KNeighborsClassifier(n_neighbors = 5)


knn.fit(X_train_sc, y_train)


knn.score(X_train_sc, y_train)


knn.score(X_test_sc, y_test)


sns.set_style('dark')


ConfusionMatrixDisplay.from_estimator(knn,X_train_sc, y_train , cmap = 'binary')
plt.title('Matrix of True and Predicted Values')
plt.xlabel('True Value')
plt.ylabel('Predicted Value')


ConfusionMatrixDisplay.from_estimator(knn, X_test_sc, y_test, cmap = 'binary')
plt.title('Matrix of True and Predicted Values')
plt.xlabel('True Value')
plt.ylabel('Predicted Value')
plt.savefig('visuals/Matrix_of_True_and_Predicted_Values.png')








